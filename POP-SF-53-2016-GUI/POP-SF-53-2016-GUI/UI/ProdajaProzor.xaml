<Window x:Class="POP_SF_53_2016_GUI.UI.ProdajaProzor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_53_2016_GUI.UI"
        mc:Ignorable="d"
        Title="ProdajaProzor" Height="618" Width="760" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#4169E1">
    <Grid>
        <Button x:Name="btnPotvrdi" Content="Potvrdi" HorizontalAlignment="Left" Height="40" Margin="211,537,0,0" VerticalAlignment="Top" Width="130" IsDefault="True" Click="Potvrdi"/>
        <Button x:Name="btnOtkazi" Content="Otkazi" HorizontalAlignment="Left" Height="40" Margin="381,537,0,0" VerticalAlignment="Top" Width="130" IsCancel="True"/>
        <DataGrid x:Name="dgStavke" ItemsSource="{Binding Source=StavkeProdaje}" AutoGenerateColumns="False"  CanUserResizeColumns="False" CanUserAddRows="False" ColumnWidth="*" SelectionMode="Single"  HorizontalAlignment="Left" Height="218" Margin="52,208,0,0" VerticalAlignment="Top" Width="544" AutoGeneratingColumn="dgStavke_AutoGeneratingColumn"/>
        <Button x:Name="btnPreuzmi" Content="Dodaj" HorizontalAlignment="Left" Height="35" Margin="601,229,0,0" VerticalAlignment="Top" Width="112" Click="DodajStavku"/>
        <Label Content="Kupac:"  HorizontalAlignment="Left" Height="31" Margin="199,24,0,0" VerticalAlignment="Top" Width="100" FontSize="16" />
        <TextBox x:Name="tbKupac" Text="{Binding Path=Kupac}" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="29" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Margin="302,24,0,0"/>
        <Label Content="Datum:" HorizontalAlignment="Left" Height="30" Margin="199,84,0,0" VerticalAlignment="Top" Width="100" FontSize="16" />
        <DatePicker x:Name="dpDatum" SelectedDate="{Binding Path=DatumProdaje}" HorizontalAlignment="Left" Height="30" Margin="302,84,0,0" VerticalAlignment="Top" Width="154"/>
        <Label Content="Stavke prodaje:" HorizontalAlignment="Left" Margin="185,152,0,0" VerticalAlignment="Top" Width="156" FontSize="20" Foreground="White" Height="44"/>
        <Button x:Name="btnUkloni" Content="Ukloni" HorizontalAlignment="Left" Height="35" Margin="601,290,0,0" VerticalAlignment="Top" Width="112" Click="UkloniStavku"/>

    </Grid>
</Window>
